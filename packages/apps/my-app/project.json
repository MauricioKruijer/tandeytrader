{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/apps/my-app/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/apps/my-app",
        "main": "packages/apps/my-app/src/main.ts",
        "tsConfig": "packages/apps/my-app/tsconfig.app.json",
        "assets": ["packages/apps/my-app/src/assets"],
        "outputFileName": "index.js",
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "packages/apps/my-app/src/environments/environment.ts",
              "with": "packages/apps/my-app/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "cd dist/packages/apps/my-app; nodemon -w . -e js -x npx functions-framework --target=hello --port=8080"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/apps/my-app/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/apps/my-app"],
      "options": {
        "jestConfig": "packages/apps/my-app/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "gcloud functions deploy hello --region=us-central1 --runtime nodejs16 --entry-point=hello --trigger-http --source ./dist/packages/apps/my-app --allow-unauthenticated --project {args.gcpProject}"
        ]
      },
      "color": true,
      "parallel": false
    }
  },
  "tags": []
}
